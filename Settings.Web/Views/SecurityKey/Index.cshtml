@model Settings.Web.Models.SecurityKeyVM
@{
    ViewBag.Title = "Security Key Generator";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <p class="pull-right">Refresh to generate new random key</p>
</div>
<div class="form-horizontal">
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(x => x.Key, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Key, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.IV, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.IV, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            @Html.LabelFor(x => x.PublicKey, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PublicKey, new { @class = "form-control", rows = 5 })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.PrivateKey, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PrivateKey, new { @class = "form-control", rows = 10 })
            </div>
        </div>
    </div>
</div>